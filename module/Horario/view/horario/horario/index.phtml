    <td><?php echo $this->escapeHtml($horario->fk_patrao);?></td>
    <td><?php echo $this->escapeHtml($horario->fk_funcionario);?></td>
    <td><?php echo $this->escapeHtml($horario->data);?></td>
    <td>
        <a href="<?php echo $this->url('horario',
            array('action'=>'edit', 'id' => $horario->id));?>" class="btn btn-primary btn-mini edit-row">Edit</a>
        <a href="<?php echo $this->url('horario',
            array('action'=>'delete', 'id' => $horario->id));?>" class="btn btn-primary btn-mini edit-row">Delete</a>
    </td>
</tr>
